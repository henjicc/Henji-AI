{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for Henji-AI",
  "windows": ["main"],
  "permissions": [
    "core:app:default",
    "core:window:default",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-close",
    "core:window:allow-start-dragging",
    "core:event:default",
    "core:path:default",
    "core:resources:default",
    "core:image:default",
    "core:menu:default",
    "core:tray:default",
    "dialog:default",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://cos-output-image.ppinfra.com/*" },
        { "url": "https://cos-output-video.ppinfra.com/*" },
        { "url": "https://*.myqcloud.com/*" }
      ]
    },
    {
      "identifier": "http:allow-fetch-read-body",
      "allow": [
        { "url": "https://cos-output-image.ppinfra.com/*" },
        { "url": "https://cos-output-video.ppinfra.com/*" },
        { "url": "https://*.myqcloud.com/*" }
      ]
    },
    {
      "identifier": "http:allow-fetch-send",
      "allow": [
        { "url": "https://cos-output-image.ppinfra.com/*" },
        { "url": "https://cos-output-video.ppinfra.com/*" },
        { "url": "https://*.myqcloud.com/*" }
      ]
    },
    "fs:default",
    "fs:allow-localdata-read-recursive",
    "fs:allow-localdata-write-recursive",
    {
      "identifier": "fs:allow-remove",
      "allow": [
        { "path": "$APPLOCALDATA/Henji-AI/**/*" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPLOCALDATA" },
        { "path": "$APPLOCALDATA/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$APPLOCALDATA/Henji-AI/**/*" },
        { "path": "$APPLOCALDATA/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$APPLOCALDATA/Henji-AI/**/*" },
        { "path": "$APPLOCALDATA/**/*" }
      ]
    }
  ]
}
