{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for Henji-AI",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:app:default",
    "core:window:default",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-close",
    "core:window:allow-start-dragging",
    "core:event:default",
    "core:path:default",
    "core:resources:default",
    "core:image:default",
    "core:menu:default",
    "core:tray:default",
    "dialog:default",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch-read-body",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch-send",
      "allow": [
        {
          "url": "http://*"
        },
        {
          "url": "https://*"
        }
      ]
    },
    "fs:default",
    "fs:allow-localdata-read-recursive",
    "fs:allow-localdata-write-recursive",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "shell:default",
    "shell:allow-open"
  ]
}